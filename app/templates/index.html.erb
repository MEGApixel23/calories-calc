<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <title>Калькулятор каллорий</title>

  <!-- Bootstrap -->
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="/vendor/datepicker/css/datepicker.css" rel="stylesheet">

  <link href="/css/main.css" rel="stylesheet">

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<body>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h3 class="text-center">Продукт</h3>

      <form action="/product/add" method="POST" class="form-horizontal">
        <div class="form-group">
          <label for="product-name" class="col-sm-2 control-label">Название</label>
          <div class="col-sm-4">
            <input id="product-name" type="text" name="name" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <label for="product-calories" class="col-sm-2 control-label">Калорийность</label>
          <div class="col-sm-4">
            <input id="product-calories" type="text" name="calories" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <label for="product-weight" class="col-sm-2 control-label">Вес</label>
          <div class="col-sm-4">
            <input id="product-weight" type="text" name="weight" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Добавить</button>
          </div>
        </div>
      </form>
    </div>

    <div class="col-md-6">
      <h3 class="text-center">Прием пищи</h3>

      <form action="/consumption/add" id="form-add-consumption" method="POST" class="form-horizontal">
        <div class="form-group">
          <label for="product-id" class="col-sm-2 control-label">Продукт</label>
          <div class="col-sm-4">
            <select id="product-id" name="product_id" class="form-control">
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="consumption-weight" class="col-sm-2 control-label">Вес</label>
          <div class="col-sm-4">
            <input id="consumption-weight" type="text" name="weight" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <label for="consumption-datetime" class="col-sm-2 control-label">Дата</label>
          <div class="col-sm-4">
            <input id="consumption-datetime" type="datetime" name="timestamp" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Добавить</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table id="consumptions-table" class="table table-bordered">
        <thead>
          <tr>
            <th>Продукт</th>
            <th>Дата</th>
            <th>Вес</th>
            <th>Энергетическая ценность (ккал)</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="/vendor/datepicker/js/bootstrap-datepicker.js"></script>

<!-- App -->
<script src="/app/info/products.js"></script>
<script src="/app/info/consumptions.js"></script>
<script src="/app/core/product.js"></script>
<script src="/app/core/calories-calc.js"></script>
</body>
</html>